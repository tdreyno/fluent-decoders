{
  "name": "@tdreyno/fluent-decoders",
  "version": "1.23.3-2",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "repository": "https://github.com/tdreyno/fluent-decoders.git",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "build": "pika build && yarn compress",
    "compress": "terser pkg/dist-web/index.js -o pkg/dist-web/index.min.js --source-map --mangle --compress passes=2 --toplevel --mangle-props regex=/_$/ && gzip-size pkg/dist-web/index.min.js",
    "test": "jest --runInBand --passWithNoTests",
    "version": "yarn run build"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint -c .eslintrc.js --ext .ts src --fix",
      "prettier --write"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "volta": {
    "node": "14.11.0",
    "yarn": "1.22.4"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "gzip-size-cli": "^3.0.0",
    "husky": "^4.3.8",
    "jest": "^25.5.4",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "terser": "^5.5.1",
    "ts-jest": "^26.4.4",
    "ts-toolbelt": "^8.0.7",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "decoders": "1.23.3"
  },
  "peerDependencies": {}
}
