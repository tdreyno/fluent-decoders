{
  "name": "@tdreyno/fluent-decoders",
  "version": "1.25.0-1",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "repository": "https://github.com/tdreyno/fluent-decoders.git",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "build": "pika build && yarn compress",
    "compress": "terser pkg/dist-web/index.js -o pkg/dist-web/index.min.js --source-map --mangle --compress passes=2 --toplevel --mangle-props regex=/_$/ && gzip-size pkg/dist-web/index.min.js",
    "test": "jest --runInBand",
    "version": "yarn run build",
    "prepare": "husky install"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ]
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint -c .eslintrc.js --ext .ts src --fix",
      "prettier --write"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  },
  "volta": {
    "node": "14.11.0",
    "yarn": "1.22.4"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "gzip-size-cli": "^5.0.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "terser": "^5.7.1",
    "ts-jest": "^27.0.3",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "decoders": "1.25.1"
  },
  "peerDependencies": {}
}
